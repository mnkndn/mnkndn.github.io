---
import Header from "../components/header.astro";
import Hero from "../components/hero.astro";
import Gutter from "../components/gutter.astro";
import About from "../components/about.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html class="h-full font-inter" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="h-full">
    <Header />
    <main>
      <Hero />
      <Gutter />
      <About />
      <Gutter />
    </main>
  </body>
</html>

<style is:global>
  :root {
    --alpha: 1;
    --primary: 45, 106, 224;
    --text-muted: 160, 160, 160;

    /* Streak borders and gutters */
    --opacity-fade-0: 1;
    --opacity-fade-1: 0.3;
    --streak-color: 180, 180, 180;
    --color-fade-0: rgba(var(--streak-color), var(--opacity-fade-0));
    --color-fade-1: rgba(var(--streak-color), var(--opacity-fade-1));
  }
</style>
